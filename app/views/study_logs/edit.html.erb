<h1>学習記録を編集</h1>

<%= form_with model: @study_log, local: true do |f| %>
  <div>
    <%= f.label :title, 'タイトル' %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :content, '内容' %><br>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.submit '更新する' %>
  </div>
<% end %>

<%= link_to '一覧に戻る', study_logs_path %>
