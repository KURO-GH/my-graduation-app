<h1>新規登録</h1>

<div class="form-wrapper">
  <div class="study-log">

    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <div style="margin-top: 16px;">
        <!-- 登録ボタン -->
        <%= f.submit '登録する', class: 'btn btn-signup' %>
      </div>
    <% end %>

    <div style="margin-top: 12px;">
      <!-- ログインはこちら -->
      <%= link_to "ログインはこちら", new_user_session_path, class: "btn btn-back" %>
    </div>

    <div style="margin-top: 12px;">
      <!-- Googleでログイン -->
      <%= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, class: "btn btn-google", data: { turbo: false } %>
    </div>

  </div>
</div>
