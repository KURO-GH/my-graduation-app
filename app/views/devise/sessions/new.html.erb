<h1>ログイン</h1>

<div class="form-wrapper">
  <div class="study-log">

    <% if alert.present? %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <div style="margin-top: 16px;">
        <%= f.submit 'ログイン', class: 'btn btn-login' %>
      </div>
    <% end %>

    <div class="auth-links" style="margin-top: 12px;">
      <%= link_to '新規登録はこちら', new_registration_path(resource_name), class: 'btn btn-signup' %><br>
      <%= link_to 'パスワードをお忘れですか？', new_password_path(resource_name), class: 'btn btn-info' %><br>
      <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, class: 'btn btn-google', data: { turbo: false } %>
    </div>

  </div>
</div>
